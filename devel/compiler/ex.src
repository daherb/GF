param Num = Sg | Pl ;
param Gen = Masc | Fem ;

param AG = A Num Gen ;

oper Agr = {g : Gen ; n : Num} ;

oper CN = {s : Num -> Str ; g : Gen} ;
oper NP = {s : Str ; a : Agr} ;

oper artDef : Gen -> Str = \g -> table {
  (Masc) => "le" ;
  (Fem) => "la"
} ! $g ;


lin Voiture : CN = {
  s = table {
    (Sg) => "voiture" ;
    (Pl) => "voitures"
  } ;
  g = (Fem@)
} ;


lin Bus : CN = {
  s = table {$x => "bus"} ;
  g = (Masc@)
} ;

